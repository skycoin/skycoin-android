<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView android:id="@+id/wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkText"
        android:layout_alignParentStart="true"
        tools:text="Wallet name"/>

    <TextView android:id="@+id/wallet_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkText"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/wallet_name"
        android:text="@string/send_dash"/>

    <TextView android:id="@+id/wallet_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/wallet_balance_blue"
        android:layout_toEndOf="@+id/wallet_dash"
        tools:text="25 SKY"/>

</RelativeLayout>