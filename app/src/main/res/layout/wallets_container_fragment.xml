<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/skycoin_city_header_bg">

        <TextView
            android:id="@+id/wallet_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/settings_button"
            android:layout_toStartOf="@+id/refresh_button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/wallets_list_heading"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/settings" />

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/refresh" />

        <TextView
            android:id="@+id/wallet_balance_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wallet_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:textSize="48sp"
            android:textStyle="bold"
            tools:text="250" />

        <TextView
            android:id="@+id/wallet_balance_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/wallet_balance_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@+id/wallet_balance_num"
            android:text="@string/currency_short"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wallet_balance_fiat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wallet_balance_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            tools:text="$3142.5 ($12.57)" />

        <TextView
            android:id="@+id/wallet_balance_hours"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/wallet_balance_fiat"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fiat_background"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            tools:text="1476 Coin Hours"
            android:textColor="@color/fiatTextColor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/delete_wallet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/wallet_balance_hours"
            android:background="@drawable/header_icon_background"
            android:padding="6dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/show_seed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/wallet_balance_hours"
            android:background="@drawable/header_icon_background"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:src="@drawable/eye_white_24" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>